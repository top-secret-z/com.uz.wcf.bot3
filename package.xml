		<instruction type="sql" run="standalone">install_comment.sql</instruction>
		<instruction type="sql" run="standalone">install_conversation.sql</instruction>
		<instruction type="objectTypeDefinition">objectTypeDefinition.xml</instruction>
		<instruction type="objectType">objectType.xml</instruction>
		<instruction type="packageInstallationPlugin">packageInstallationPlugin.xml</instruction>
		<instruction type="uzbotNotify">uzbotNotify.xml</instruction>
		<instruction type="userNotificationEvent">userNotificationEvent.xml</instruction>
		<instruction type="uzbotType">uzbotType.xml</instruction>
		<instruction type="eventListener">eventListener.xml</instruction>
		<instruction type="cronjob">cronjob.xml</instruction>
		<instruction type="script">acp/install_com.uz.wcf.bot3.php</instruction>
	</instructions>
	
